{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
<div class="container">
    <div class="card mx-1 mt-3 col-12 my-5" >
                <div class="card-body">
                    <h3 class="card-title text-center"> {{ restaurant.nom }}</h5>
                    <p class="card-text text-center">{{ restaurant.adresse }}</p> 
                     <p class="card-text text-center">{{ restaurant.tel }}</p> 
                </div>
            </div>    
    <h1>Produits</h1>
        {% for user in restaurant.users %}
            {% if app.user == user %}
                <a type="button" class="btn success" href="{{ path('produit_new', {'id': restaurant.id}) }}"><i class="fas fa-plus"></i></a>
            {% endif %}
        {% endfor %}
    <div class="row">
        {% for produit in produits %}
            <div class="card mx-1 mt-3" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title"> {{ produit.nom }} - <span style="color: #CE2D4F ">{{ produit.prix }}â‚¬</span></h5>
                    <p class="card-text">{{ produit.description }}</p> 
                        <a type="button" class="btn success" href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="fas fa-pen"></i></a>
                        {{ include('produit/_delete_form.html.twig') }}                
                        <a class="dedcription-btn text-center" href="{{ path('commande_products_new', {'id': produit.id}) }}">
                            <span class="name-descripeion">Ajouter au panier</span>
                            <div class="btn-icon">
                            <i class="fas fa-shopping-bag"></i>
                            </div>
                        </a>
            
                </div>
            </div>
        {% endfor %}
    </div>    
</div>
{% endblock %}
