{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
<div class="container">
    <h1>Restaurant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ restaurant.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ restaurant.adresse }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ restaurant.tel }}</td>
            </tr>
        </tbody>
    </table>
    
    <h1>Produits</h1>
        {% for user in restaurant.users %}
            {% if app.user == user %}
                <a type="button" class="btn success" href="{{ path('produit_new', {'id': restaurant.id}) }}"><i class="fas fa-plus"></i></a>
            {% endif %}
        {% endfor %}
    <div class="row">
        {% for produit in produits %}
           
            <div class="card mx-1 mt-3" style="width: 20rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"> {{ produit.nom }} - {{ produit.prix }}â‚¬</h5>
                    <p class="card-text">{{ produit.description }}</p> 
                    {% for user in restaurant.users %}
                        {% if app.user == user %}
                            <a type="button" class="btn success" href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="fas fa-pen"></i></a>
                            {{ include('produit/_delete_form.html.twig') }}
                        {% else %}
                            <a href="#" type="button" class="btn success">Ajouter au panier</a>
                            AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>    
</div>
{% endblock %}
