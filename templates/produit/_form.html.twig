<div class="container">
      {{ form_start(form) }}
      <div class="col-6">
            {{ form_row(form.nom, {
                  attr: {
                        class: 'form-control'
                        }
                  })
            }}
      </div>
      <div class="col-6">
            {{ form_row(form.prix, {
                  attr: {
                        class: 'form-control'
                        }
                  }) }}
      </div>
      <div class="col-6">
            {{ form_row(form.description, {
                  attr: {
                        class: 'form-control'
                        }
                  }) }}
      </div>
      <button class="btn">{{ button_label|default('sauvegarder') }}</button>
      {{ form_end(form) }}
      
           
</div>